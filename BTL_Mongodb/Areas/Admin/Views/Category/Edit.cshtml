@model BTL_Mongodb.Models.Category
@using BTL_Mongodb.Models.BusinessModels.ImplementModels

@{
    ViewData["Title"] = "Cập nhật danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-lg-12">
    <div class="ibox-content">
        <h2 class="text-center">Cập nhật danh mục</h2>
        <form asp-action="Edit" method="post" accept-charset="UTF-8">
            @* Hidden field để gửi Id về *@
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Tên danh mục</label>
                <input asp-for="Name" class="form-control" placeholder="Nhập tên danh mục..." />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label">Trạng thái</label>
                <select asp-for="Status" class="form-control"
                        asp-items="Html.GetEnumSelectList<CategoryStatus>()">
                    <option value="">-- Chọn trạng thái --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">Cập nhật</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    </div>
</div>
