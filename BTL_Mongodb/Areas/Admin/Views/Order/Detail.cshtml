@model BTL_Mongodb.Models.ViewModel.OrderViewModel

@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<h1>@ViewData["Title"]</h1>

<div class="card mb-4">
    <div class="card-header">
        <i class="fa fa-globe"></i>
        Thông tin đơn hàng
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã đơn hàng:</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Khách hàng:</dt>
            <dd class="col-sm-9">@Model.FullName</dd>

            <dt class="col-sm-3">Địa chỉ:</dt>
            <dd class="col-sm-9">@Model.Address</dd>

            <dt class="col-sm-3">Số điện thoại:</dt>
            <dd class="col-sm-9">@Model.Phone</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Ngày đặt hàng:</dt>
            <dd class="col-sm-9">@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Tổng tiền:</dt>
            <dd class="col-sm-9">@Model.TotalAmount.ToString("N0") đ</dd>
        </dl>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <i class="fa fa-star"></i>
        Chi tiết sản phẩm
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Số lượng</th>
                    <th>Đơn giá</th>
                    <th>Thành tiền</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderDetails)
                {
                    <tr>
                        <td>@item.ProductName</td>
                        <td>@item.Quantity</td>
                        <td>@item.Price.ToString("N0") đ</td>
                        <td>@item.Total.ToString("N0") đ</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <th colspan="3" class="text-right">Tổng cộng:</th>
                    <th>@Model.TotalAmount.ToString("N0") đ</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>