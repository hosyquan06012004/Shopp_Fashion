    <script>
        $(function () {
            var success = '@TempData["success"]';
            var error = '@TempData["error"]';

            if (success && success.trim() !== '') {
                toastr.success(success);
            }
            if (error && error.trim() !== '') {
                toastr.error(error);
            }
        });
    </script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                toastr.options = {
                    closeButton: true,
