@using BTL_Mongodb.Models.ViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome và CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="~/accountuser/css/style.css" asp-append-version="true">
    <link rel="icon" type="image/svg" href="~/logo_fashion.jpg" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />


    <style>
        .button-style {
            width: 100%;
            text-align: center;
            padding: 10px 0;
            border: 1px solid white;
            background: none;
            color: white;
            cursor: pointer;
            font-weight: bold;
            text-transform: uppercase;
            display: inline-block;
            transition: 0.3s;
        }

            .button-style:hover {
                background-color: white;
                color: black;
            }


    </style>
</head>
<body>
    @* @Html.Partial("_NotificationPartial") *@


    <div id="wrapper">
        <form id="form-login" asp-action="Login" asp-controller="AccountUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <h1 class="form-heading">Đăng nhập</h1>

            <div class="form-group">
                <i class="fas fa-user"></i>
                <input asp-for="Username" class="form-input" placeholder="Tên đăng nhập" />
                <span class="text-danger" asp-validation-for="Username"></span>
            </div>

            <div class="form-group">
                <i class="fas fa-key"></i>
                <input asp-for="Password" class="form-input password-toggle" type="password" placeholder="Mật khẩu" />
                <span class="text-danger" asp-validation-for="Password"></span>
                <div class="eye-toggle" style="cursor: pointer;"><i class="far fa-eye"></i></div>
            </div>


            <input type="submit" value="Đăng nhập" class="form-submit" />
            <a asp-controller="AccountUser" asp-action="LoginByGoogle" class="button-style">
                <img src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" style="height:16px; margin-right:8px;" />
                Đăng nhập bằng Google
            </a>



            <a asp-action="Register" asp-controller="AccountUser">Chưa có tài khoản? Đăng ký</a>
        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
    <script src="~/accountuser/js/site.js" asp-append-version="true"></script>


    @* toastr *@
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>

    <script>
        $(function () {
            var success = '@TempData["success"]';
            var error = '@TempData["error"]';

            if (success && success.trim() !== '') {
                toastr.success(success);
            }
            if (error && error.trim() !== '') {
                toastr.error(error);
            }
        });
    </script>
</body>
</html>
